<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Party name:">
         <padding>
            <Insets bottom="4.0" left="8.0" right="4.0" top="4.0" />
         </padding>
      </Label>
      <Label text="Party leader:" GridPane.rowIndex="1">
         <padding>
            <Insets bottom="4.0" left="8.0" right="4.0" top="4.0" />
         </padding>
      </Label>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <buttons>
          <Button fx:id="btnRegister" defaultButton="true" mnemonicParsing="false" onAction="#registerParty" text="Register" />
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelRegistration" text="Cancel" />
        </buttons>
      </ButtonBar>
      <TextField fx:id="txtPartyName" GridPane.columnIndex="1" />
      <TextField fx:id="txtPartyLeader" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
</GridPane>
